{% extends 'index.twig' %}
{% block container %}

    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">     <a href="/Judges/demandes">Judges</a>>>all</h3>
        </div>
        <div class="panel-body">
            <table id="demo-dt-basic" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>lastName and FirstName </th>
                    <th>Email</th>
                    <th class="min-tablet">Creation date</th>
                    <th class="min-tablet">Status</th>
                    <th class="min-desktop">Action</th>

                </tr>
                </thead>
                <tbody>
                {% for d in demandes %}
                <tr>
                    <td>{{ d.createdBy.LastName }} {{ d.createdBy.FirstName }}</td>
                    <td>{{ d.createdBy.Email }}</td>
                    <td>{{ d.creationDate|date}}</td>
                    <td>{{ d.Status }}</td>
                    <td>    <form  >
                            <a href="/Judges/search/{{ d.createdBy.id }}">Edit</a>
                        </form>
                        <a href="/Judges/{{ d.id }}/{{ d.createdBy.id }}?_method=DELETE" >Delete</a>
                    </td>
                </tr>
                {% endfor %}


                </tbody>
            </table>



            <a href="/judges/addJudge">Add Judge</a>
            </form>
        </div>
    </div>
{% endblock %}