{% extends '../index.twig' %}
{% block container %}

    <table id="TableSession" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th class="th-sm">Nom de la session</th>
            <th class="th-sm">Date de debut</th>
            <th class="th-sm">Date de fin</th>
            <th class="th-sm">Status</th>

        </tr>
        </thead>
        <tbody>
        {%  for session in Sessions  %}
            <tr>
                <td>

                    <a href="sessions/{{ session.id }}">
                        {{session.Name}} {{ session.id }}
                    </a>
                </td>
                <td>{{session.StartDate | date("m-d-Y") }}</td>
                <td>{{session.EndDate | date("m-d-Y") }}</td>
                <td>{{session.Status}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#TableSession').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
{% endblock %}